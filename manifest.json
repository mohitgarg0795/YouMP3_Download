{
	"manifest_version" : 2,
	"name" : "YouMP3Download",
	"version" : "1.0",

	"background" : {
		"scripts" : ["background.js"]
	},

	"browser_action" : {
		"default_popup":"popup.html",
	    "default_icon" : "icon16.png"
	},

	"content_scripts" : [
		{
			"matches" : [
				"<all_urls>"	//injects content.js script on all pages we visit
			],
			"js" : ["jquery.min.js","content.js"]
		}
	],

	"icons": { 
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" 
    },

	"permissions" : [                  
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "http://*/",
    "https://*/",
    "https://ajax.googleapis.com/"
  	]
}